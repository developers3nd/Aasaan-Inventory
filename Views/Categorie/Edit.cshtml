@model online_store.Models.tblcategory

@using (Html.BeginForm())
{
    <div class="wrapper">

        <div class="container">
            <div class="row">
                <div class="col-lg-8 pl-2">
                    <div class="card card-info mylogin">
                        <div class="card-header">
                            <h3 class="card-title">Add Category</h3>
                        </div>


                        @using (Html.BeginForm())

                        {
                            @Html.HiddenFor(modal => modal.catid)
                        <form class="form-horizontal">
                                <div class="card-body">
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Category Name</label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.catname)
                                        </div>
                                    </div>


                                </div>

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-info">Add Categorie</button>
                                    <p class="text-primary"> @ViewBag.msg</p>
                                </div>

                            </form>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
}
