@model online_store.Models.tblstock

@{
    ViewBag.Title = "Create";
}

<h2>Add Stock</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <h4>Select Product</h4>
            <div class="col-md-10">
                @Html.DropDownList("pid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.pid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Select Supplier</h4>
            <div class="col-md-10">
                @Html.DropDownList("sid", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Qty</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.qty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Date</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expirary_date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.expirary_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Stock" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

