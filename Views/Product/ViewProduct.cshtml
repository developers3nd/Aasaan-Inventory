<h1>View Products</h1>
<div class="card">
    @*<div class="card-header">
            <h3 class="card-title">View Categories</h3>
        </div>*@
    <!-- /.card-header -->
    <div class="card-body">
        <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @*<div class="row"><div class="col-sm-12 col-md-6"><div class="dt-buttons btn-group flex-wrap">               <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Copy</span></button> <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>CSV</span></button> <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Excel</span></button> <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>PDF</span></button> <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example1" type="button"><span>Print</span></button> <div class="btn-group"><button class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis" tabindex="0" aria-controls="example1" type="button" aria-haspopup="true"><span>Column visibility</span><span class="dt-down-arrow"></span></button></div> </div></div><div class="col-sm-12 col-md-6"><div id="example1_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="example1"></label></div></div></div><div class="row">*@
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                       <thead>
                            <tr>
                                <th>Product Image</th>
                                <th>Name</th>
                                <th>Category Name</th>
                                <th>Price</th>
                                <th>Item Code</th>
                                <th>Actions</th>
                            </tr>



                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Uploads/@item.pimage" style="width:100px; height:70px;" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblcategory.catname)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.itemcode)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Edit","Product", new { pid  = item.pid })" class="btn btn-info"> Edit </a>
                                        <a href="@Url.Action("Delete","Product", new { pid  = item.pid })" class="btn btn-danger"> Delete </a>
                                    </td>

                                </tr>

                            }
                        </tbody>

                    </table>
                </div>
            
    </div>
    <!-- /.card-body -->
</div>

