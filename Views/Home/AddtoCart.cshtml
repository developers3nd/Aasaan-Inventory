@{
    Layout = "~/Views/Shared/_FrontLayout .cshtml";

}
@model IEnumerable<online_store.Models.tblproduct>


@model online_store.Models.tblproduct


<div class="container">

    @using (Html.BeginForm())
    {


        <div class="row">
            <div class="col-lg-6">
                <input type="hidden" name="id" value="@Model.pid" />
                <img src="~/Uploads/@Model.pimage" style="height:250px;width:100%" />
            </div>

            <div class="col-lg-6">
                <h3>@Model.name</h3>

                <p>@Model.name</p>
                <p>Rs. <strong>@Model.price</strong></p>
                <input type="number" min="1" max="10" name="qty" />
                <input type="submit" value="Add to Cart" class="btn btn-warning" />
            </div>

        </div>

    }
</div>

